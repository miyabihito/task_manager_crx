{
	"name" : "Task Manager",
	"version" : "0.0.1",
	"manifest_version" : 2,
	"description" : "help you to manage tasks",
	"icons" : {
		"16" : "img/icon_016.png",
		"48" : "img/icon_048.png",
		"128": "img/icon_128.png"
	},
	"browser_action" : {
		"default_icon" : {
			"19" : "img/icon_032.png"
		},
		"default_title" : "Task Manager"
	},
	"background" : {
		"scripts" : ["js/event_page.js"],
		"persistent" : false
	},
	"permissions" : [
		"tabs",
		"storage",
		"unlimitedStorage"
	]
}
